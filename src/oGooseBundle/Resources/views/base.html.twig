    <head>
        <title>{% block title %}oGoose - Construïm el coneixement del futur{% endblock %}</title>

        <!-- meta -->
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
        <meta name="viewport" content="width=device-width, initial-scale = 1.0, maximum-scale=1.0, user-scalable=no">

        <!-- google fonts -->
        <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>

        <!-- css -->
        <link rel="stylesheet" href="/bundles/ogoose/assets/css/ogoose.css?{{ "now" | date("Ymdhis") }}" media="screen"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.1/css/select2.min.css">

        <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"></script>
    </head>

    <body>
        <header class="top-header">
            <div class="">
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-lg-6 col-lg-offset-2">
                        <a href="{{path('homepage')}}">
                            <img src="/bundles/ogoose/assets/img/logo.png" class="logo" alt="oGoose">
                        </a>
                        <span class="slogan">Construïm el coneixement del futur</span>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-lg-2 text-right">
                    {% if session is defined %}
                        <a href="{{ url('author_show', { 'id': session.id }) }}" title="{{ session.name }}">
                            <span class="glyphicon glyphicon-user" aria-hidden="true"></span> {{ session.name }}
                        </a>
                    {% else %}
                        <a href="#login">Login</a> | <a href="#login">Registra't</a>
                    {% endif %}
                    </div>
                </div>
            </div>
        </header>

        {% block content %}
        {% endblock %}

        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
            <script src="/bundles/ogoose/assets/js/vendor/bootstrap.min.js"></script>
            <script src="/bundles/ogoose/assets/js/script.js"></script>
        {% endblock %}

    </body>
</html>

