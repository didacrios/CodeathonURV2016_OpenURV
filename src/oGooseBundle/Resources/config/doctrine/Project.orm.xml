<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity repository-class="oGooseBundle\Repository\ProjectRepository" name="oGooseBundle\Entity\Project">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="title" type="string" column="title" length="255"/>
        <field name="abstract" type="text" column="abstract"/>
        <field name="keywords" type="string" column="keywords" length="255"/>
        <field name="publicationdate" type="datetime" column="publicationdate"/>
        <field name="allowcomments" type="boolean" column="allowcomments"/>
        <field name="open" type="boolean" column="open"/>
    </entity>
  
    <many-to-one field="user" target-entity="User" inversed-by="projects">
        <join-column name="userid" referenced-column-name="id" />
    </many-to-one>
    
    <many-to-one field="projecttype" target-entity="Projecttype" inversed-by="projects">
        <join-column name="projecttypeid" referenced-column-name="id" />
    </many-to-one>
    
    <many-to-one field="field" target-entity="Field" inversed-by="projects">
        <join-column name="fieldid" referenced-column-name="id" />
    </many-to-one>
</doctrine-mapping>
